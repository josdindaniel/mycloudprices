<%- layout('layouts/pages.ejs') %>
<div class="row register-form">
    <div class="col-md-8 offset-md-2">
        <form class="shadow-lg custom-form" action="/signup" method="POST">
            <h1><strong>Create account in MyCloudPrices</strong></h1>
            <div class="form-row form-group">
                <div class="col-sm-4 col-xl-3 label-column">
                    <label class="col-form-label" for="name-input-field">First name:</label>
                </div>
                <div class="col-sm-6 col-xl-6 input-column">
                    <input class="form-control" type="text" name="firstname" required=""
                        placeholder="What is your name?">
                </div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 col-xl-3 label-column">
                    <label class="col-form-label" for="name-input-field">Last name:</label>
                </div>
                <div class="col-sm-6 col-xl-6 input-column">
                    <input class="form-control" type="text" name="lastname" required=""
                        placeholder="What is your last name?">
                </div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 col-xl-3 label-column">
                    <label class="col-form-label" for="email-input-field">Email address:</label>
                </div>
                <div class="col-sm-6 col-xl-6 input-column">
                    <input class="form-control" type="email" name="email" required="" placeholder="What is your email?">
                </div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 col-xl-3 label-column">
                    <label class="col-form-label" for="name-input-field">Company name:</label>
                </div>
                <div class="col-sm-6 col-xl-6 input-column"><input class="form-control" type="text" name="company"
                        required="" placeholder="Where do you work?">
                </div>
            </div>
