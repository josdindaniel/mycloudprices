<%- layout('layouts/pages.ejs') %>

<div class="login-clean">
    <form action="/signin" method="POST">
        <h2 class="text-center">Login to MyCloudPrices</h2>
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration">
            <i class="icon ion-ios-navigate"></i>
        </div>
        <div class="form-group">
            <input class="form-control" type="email" name="email" placeholder="Email" required="">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Password" required=""></div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Login</button>
        </div>
        <a href="/recovery" class="forgot">Forgot your password?</a>
    </form>
</div>