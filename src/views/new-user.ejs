<%- layout('layouts/account.ejs') %>
<div class="container profile2 profile-view" id="profile">
    <form action="/new-user" method="POST">
        <div class="form-row profile-row">
            <div class="col-md-12">
                <h1>User Register</h1>
                <hr>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <label>First name: &nbsp;</label>
                            <input class="form-control" type="text" name="firstname" required="" value="<%= infoFirstName %>">
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <label>Last name: &nbsp;</label>
                            <input class="form-control" type="text" name="lastname" required="" value="<%= infoLastName %>">
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <label>Email </label>
                            <input class="form-control" type="email" name="email" required="" autocomplete="off" value="<%= infoEmail %>">
                        </div>
                    </div>

                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label>Password </label>
                            <input class="form-control" type="password" name="password" id="password" autocomplete="off"
                                required pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                                title="Password must contain: Minimum 8 characters atleast UpperCase, LowerCase, Number/SpecialChar">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input class="form-control" type="password" name="password2" id="password2"
                                autocomplete="off" required="">
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="status" class="custom-control-input" id="defaultUnchecked"
                                   <% if(infoStatus.length > 0) {
                                        %> checked <%
                                   }%> >
                                <label class="custom-control-label" for="defaultUnchecked">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <div class="custom-control custom-radio custom-control-inline ">
                                <input type="radio" class="custom-control-input" id="defaultInline1" name="role" value="1"
                                    required
                                    <% if(infoRole == 1) {
                                        %> checked <%
                                   }%> >
                                <label class="custom-control-label" for="defaultInline1">Administrator</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="defaultInline2" name="role" value="2"
                                    required
                                    <% if(infoRole == 2) {
                                        %> checked <%
                                   }%> >
                                <label class="custom-control-label" for="defaultInline2">Editor</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="defaultInline3" name="role" value="3"
                                    required
                                    <% if(infoRole == 3) {
                                        %> checked <%
                                   }%> >
                                <label class="custom-control-label" for="defaultInline3">Viewer</label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="form-row">
                    <div class="col-md-12 content-right">
                        <button class="btn btn-primary form-btn" type="submit">CREATE</button>
                        <a class="btn btn-danger" href="/user" role="button">CANCEL</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>