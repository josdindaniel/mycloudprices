<%- layout('layouts/account.ejs') %>
<div class="container profile2 profile-view" id="profile">
    <form action="/edit-user/<%= account.id %>?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-row profile-row">
            <div class="col-md-12">
                <h1>User Edit</h1>
                <hr>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <label>First name: &nbsp;</label>
                            <input class="form-control" type="text" name="firstname" required
                                value="<%= account.name %>">
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <label>Last name: &nbsp;</label>
                            <input class="form-control" type="text" name="lastname" required
                                value="<%= account.lastname %>">
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <label>Email </label>
                            <input class="form-control" type="email" name="email" required autocomplete="off"
                                value="<%= account.email %>" disabled>
                        </div>
                    </div>

                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label>Password </label>
                            <input class="form-control" type="password" name="password" id="password" autocomplete="off"
                                pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                                title="Password must contain: Minimum 8 characters atleast UpperCase, LowerCase, Number/SpecialChar">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input class="form-control" type="password" name="password2" id="password2"
                                autocomplete="off">
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" name="status" class="custom-control-input" id="defaultUnchecked" <% if(account.status) {
                                        %> checked <%
                                   }%>>
                                <label class="custom-control-label" for="defaultUnchecked">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-16">
                        <div class="form-group">
                            <div class="custom-control custom-radio custom-control-inline ">
                                <input type="radio" class="custom-control-input" id="defaultInline1" name="role"
                                    value="1" required <% if(account.role == 1) {
                                        %> checked <%
                                   }%>>
                                <label class="custom-control-label" for="defaultInline1">Administrator</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="defaultInline2" name="role"
                                    value="2" required <% if(account.role == 2) {
                                        %> checked <%
                                   }%>>
                                <label class="custom-control-label" for="defaultInline2">Editor</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="defaultInline3" name="role"
                                    value="3" required <% if(account.role == 3) {
                                        %> checked <%
                                   }%>>
                                <label class="custom-control-label" for="defaultInline3">Viewer</label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="form-row">
                    <div class="col-md-12 content-right">
                        <button class="btn btn-primary form-btn" type="submit">UPDATE</button>
                        <a class="btn btn-danger" href="/user" role="button">CANCEL</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>